{% extends "P5CoreBundle::layout.html.twig" %}

{% block body %}

<div id="loginblock" class="col-sm-8">

	{% if error %}

	<div id="errorlogin">{{error.message}}</div>

	{% endif %}

	<h3>Connexion</h3>

	<div id="loginform" >	
		<form method="post" action="{{ path('login_check') }}">
			<label for="username">Identfiant : </label>
			<br>
			<input type="text" name="_username" value= "{{last_username}}" class="form-control" id="username" >
			<br>
			<label for="password">Mot de passe : </label>
			<br>
			<input type="password" name="_password" class="form-control" id="password">
			<a href="{{path ('p5_user_resetpass')}}" id="forgotpass">mot de passe oubli√© ?</a>
			<br>
			<input type="submit" name="connect" value="Connexion" id="connect" >	
		</form>
	</div>
</div>
{% endblock %}