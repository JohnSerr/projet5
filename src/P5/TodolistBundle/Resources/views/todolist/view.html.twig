{% extends 'P5TodolistBundle::layout.html.twig' %}

{% block p5todolist_body %}
<div class="table-responsive">
	<table class="table table-striped">
		<tr>
			<th>Titre</th>
			<th>Ajouté le</th>
			<th>To Do</th>
			<th>Date limite</th>
			<th>Options</th>
		</tr>

		{% for remind in entirelist %}

		<tr>
			<td>{{remind.title}}</td>
			<td>{{remind.date|date("d-m-Y")}}</td>
			<td>{{remind.content}}</td>
			
			<td>
				{% if remind.remind == false %}
					Non programmé.
				{% else %}
					{{remind.dateofend|date("d-m-Y")}}
				{% endif %}
			</td>
			<td><a href="{{ path('p5_todolist_edit', {'id' : remind.id }) }}" class="btn btn-warning btn-sm" role="button"><i class="fas fa-pen"></i> Editer</a> 
				<a href="{{ path('p5_todolist_delete', {'id' : remind.id }) }} " class="btn btn-danger btn-sm" role="button"><i class="fas fa-trash-alt"></i> Supprimer</a></td>
		</tr>	

		{% endfor %} 
	</table>
</div>

	<ul class="pagination">
  
 		 {% for p in range(1, nbPages) %}
   
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('p5_todolist_view', {'page': p}) }}">{{ p }}</a>
    </li>

  		{% endfor %}
	
	</ul>
{% endblock %}