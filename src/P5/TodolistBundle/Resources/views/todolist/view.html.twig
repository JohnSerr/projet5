{% extends 'P5TodolistBundle::layout.html.twig' %}

{% block p5todolist_body %}
<div>
	<table class="table table-striped">
		<tr>
			<th class="col-sm-1">Titre</th>
			<th class="col-sm-2" id="hide">Ajouté le</th>
			<th class="col-sm-4">To Do</th>
			<th class="col-sm-2">Date de rappel</th>
			<th class="col-sm-3">Options</th>
		</tr>

		{% for remind in entirelist %}

		<tr>
			<td>{{remind.title}}</td>
			<td class="adddate">{{remind.date|date("d-m-Y")}}</td>
			<td>{{remind.content}}</td>
			
			<td>
				{% if remind.remind == false %}
					Non programmé.
				{% else %}
					{{remind.dateofend|date("d-m-Y")}}
				{% endif %}
			</td>
			<td><a href="{{ path('p5_todolist_edit', {'id' : remind.id }) }}" class="btn btn-warning btn-sm" role="button" id="Edit"><i class="fas fa-pen"></i>Editer</a> 
				<a href="{{ path('p5_todolist_delete', {'id' : remind.id }) }} " class="btn btn-danger btn-sm" role="button" id="Suppr"><i class="fas fa-trash-alt"></i>Supprimer</a></td>
		</tr>	

		{% endfor %} 
	</table>
</div>

{% if nbPages > 0 %}

	<ul class="pagination">
  
 		 {% for p in range(1, nbPages) %}
  
    	<li{% if p == page %} class="active"{% endif %}>
      		 <a href="{{ path('p5_todolist_view', {'page': p}) }}"> {{ p }}</a>
    	</li>
  		
  		{% endfor %}	
	</ul>

{% else %}

<p> Vous n'avez pas de rappel enregistré pour le moment. </p>

{% endif %}

{% endblock %}